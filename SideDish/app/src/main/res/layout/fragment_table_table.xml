<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_background_plain"
    android:orientation="vertical"

    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="Table Details"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:padding="20dp"
        android:gravity="center_horizontal"
        android:textSize="40dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp">

        <TextView
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:text="#"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:gravity="left"
            android:layout_weight="1"
            android:textSize="35sp"
            android:layout_marginLeft="30dp"
            />


        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Section"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:gravity="left"
            android:layout_weight="1"
            android:textSize="35sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1.7"
            android:text="Status"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:textSize="35sp"
            />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/table_recycler_view"
        android:layout_height="650dp"
        android:layout_width="match_parent"
        >
    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/new_table_button"
            android:background="#FF5A595B"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="New Table"
            android:textColor="#FFFFFF"
            android:padding="20dp"
            android:textSize="25sp"
            />

        <Button
            android:id="@+id/edit_table_button"
            android:background="#FF5A595B"
            android:textColor="#FFFFFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="Edit Table"
            android:padding="20dp"
            android:textSize="25sp"
            />
    </LinearLayout>


</LinearLayout>
